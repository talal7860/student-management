.row
  .col-lg-12
    %h1 Students
    :css
      table, th, td{
       text-align: center;
      }
      = link_to image_tag("@students.picture.url", height:'100px'), "@students.picture.url", data:{ title:'title1', footer:'footer1', toggle:'lightbox', gallery:'multiimages' }


    %table.table.table-bordered.table-responsive.table-striped.table-hover
      %tr
        %th Name
        %th Email
        %th Class
        %th Studying Status
        %th Branch Name
        %th Actions
      - @students.each do |student|
        %tr
          %td 
            = student.name
          %td
            = student.email
          %td
            = student.student_class
          %td
            = student.studying_status
          %td
            = student.branch.name
          %td
            = link_to "Show", student
    %a#menu-toggle.btn.btn-default{:href => "#menu-toggle"} Toggle Menu