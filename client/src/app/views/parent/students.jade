.row
  .col-lg-12
    h1 Students
    table.table.table-bordered.table-responsive.table-striped.table-hover
      tr
        th Name
        th Email
        th Class
        th Studying Status
        th Branch Name
        th Actions
        tr(ng-repeat="student in parent.students")
          td {{ student.name }}
          td {{ student.email }}
          td {{ student.student_class }}
          td {{ student.studying_status }}
          td {{ student.branch.name }}
